<div class="input-append">
    <input type="text" class="input-xxlarge" data-bind="value: newUrl">
    <button class="btn btn-primary" data-bind="click: goToUrl">{{ _('Go') }}</button>

    <br/>
    <input type="number" style="width: 153px" data-bind="slider: {min: 0.0, max: 1.0, step: 0.1, value: deviceSpeed, tooltip: 'hide'}">
    <button class="btn btn-block" style="width: 169px" data-bind="click: function() { $root.sendDeviceSpeedCommand() }">{{ _('Speed: ') }}<span data-bind="text: deviceSpeed() + '%'"></span></button>
</div>

<iframe data-bind="attr: {src: currentUrl}" style="width: 100%; height: 600px; border: 1px solid #808080"></iframe>
